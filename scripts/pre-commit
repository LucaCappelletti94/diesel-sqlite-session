#!/bin/bash
# Pre-commit hook for diesel-sqlite-session
# Install: cp scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit
# Or run: ./scripts/install-hooks.sh

set -e

echo "Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if any Rust files are staged
RUST_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.rs$' || true)

if [ -z "$RUST_FILES" ]; then
    echo -e "${YELLOW}No Rust files staged, skipping Rust checks${NC}"
    exit 0
fi

echo -e "${YELLOW}Checking formatting...${NC}"
if ! cargo fmt --all -- --check; then
    echo -e "${RED}Formatting check failed!${NC}"
    echo "Run 'cargo fmt' to fix formatting issues."
    exit 1
fi
echo -e "${GREEN}Formatting OK${NC}"

echo -e "${YELLOW}Running clippy...${NC}"
if ! cargo clippy --all-targets --all-features -- -D warnings 2>/dev/null; then
    echo -e "${RED}Clippy found issues!${NC}"
    exit 1
fi
echo -e "${GREEN}Clippy OK${NC}"

echo -e "${YELLOW}Checking compilation...${NC}"
if ! cargo check --all-targets --all-features 2>/dev/null; then
    echo -e "${RED}Compilation check failed!${NC}"
    exit 1
fi
echo -e "${GREEN}Compilation OK${NC}"

echo -e "${GREEN}All pre-commit checks passed!${NC}"
